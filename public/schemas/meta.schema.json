{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["titre", "version", "chapitres"],
  "properties": {
    "titre": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "chapitres": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["titre", "contenu"],
        "properties": {
          "titre": { "type": "string" },
          "contenu": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}

